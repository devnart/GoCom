                <attribute>label</attribute>
            </attributes>
        </shortcode>

        <shortcode>
            <tag>extra_menu</tag>
            <attributes>
                <attribute>title</attribute>
                <attribute type="link" encoding="vc_link">link</attribute>
                <attribute>label_text</attribute>
            </attributes>
        </shortcode>

        <shortcode>
            <tag>extra_menu_list</tag>
            <attributes>
                <attribute>title</attribute>
